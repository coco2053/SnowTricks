{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="container-fluid">
  <div class="col-md-3"> </div>
  <div class="col-md-6 container-trick">
    <article>
      <h2>Inscription</h2>
      {{ form_start(form) }}
      {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Entrez le pseudo'}}) }}
      {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Entrez votre adresse email'}}) }}
      {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Tapez votre mot de passe'}}) }}
      {{ form_row(form.confirm_password, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Retapez votre mot de passe'}}) }}
      {{ form_row(form.avatarImage, {'label': 'Avatar (facultatif)', 'attr': {'style': 'max-width: 250px'}}) }}
      <div class="buttons">
        <button type="submit" name="register" class="btn btn-success">Inscription</button>
        {{ form_end(form) }}
      </div>
      <p class="center">Deja inscrit ? </br>
          <a href="{{ path('security_login') }}">Se connecter</a>
      </p>
    </article>
  </div>
  <div class="col-md-3"> </div>
</div>

{% endblock %}
