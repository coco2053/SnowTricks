{% extends 'base.html.twig' %}

{% block title %}Reinitialiser le mot de passe{% endblock %}
{% block body %}
    <h1>Reinitialiser le mot de passe</h1>
    {{ form_start(form) }}

    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Tapez votre mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Retapez votre mot de passe'}}) }}

   <button type="submit" class="btn btn-success">Envoyer</button>
   {{ form_end(form) }}

{% endblock %}


