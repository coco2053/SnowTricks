{% extends 'base.html.twig' %}

{% block title %}Les figures {% endblock %}

{% block body %}
<section class="trick">
    {% for trick in tricks %}
    <article>
        <h2><a href="{{ path('show', {'id': trick.id}) }}">{{ trick.name }}</a></h2>
        <div class="metadata">Ecrit le {{ trick.createdAt | date('d/m/Y') }} Ã  {{ trick.createdAt | date('H:i') }} dans le groupe {{ trick.trickGroup.title }}</div>
        <div class="content">

            {% set image = trick.trickImages.first() %}
            <img src="{{ asset("uploads/images/")~image.url }}" alt="" style="width:20%">

        </div>
    </article>
</section>
{% endfor %}
{% endblock %}
