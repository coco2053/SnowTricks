{% extends 'base.html.twig' %}

{% block title %}Les figures {{ controller_name }}!{% endblock %}

{% block body %}
<section class="trick">
    {% for trick in tricks %}
    <article>
        <h2>{{ trick.name }}</h2>
        <div class="metadata">Ecrit le {{ trick.createdAt | date('d/m/Y') }} Ã  {{ trick.createdAt | date('H:i') }} dans le groupe {{ trick.trickGroup.title }}</div>
        <div class="content">
             {% for image in trick.trickImages %}
                <img src="{{ image.url }}" alt="" style="width:20%">
             {% endfor %}

             {% for video in trick.videos %}
                {{ video.url | raw }}
             {% endfor %}

                {{ trick.content | raw }}
            <a href="#" class="btn btn-primary">Lire la suite</a>
        </div>
    </article>
</section>
{% endfor %}
{% endblock %}
